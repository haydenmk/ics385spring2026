const superheroes = require('superheroes'); //This line loads the node package "superheroes" so that the rest of the code is able to use its features.
const supervillains = require('supervillains'); //This line loads the node package "supervillains" so that the rest of the code is able to use its features.

var mySuperHeroName = superheroes.random(); //This line uses the package's built-in random function to pull a random superhero name from the list.
var mySuperVillainName = supervillains.random(); //This line uses the package's built-in random function to pull a random supervillain name from the list.

console.log(mySuperHeroName); //The superhero name randomly selected in the previous section is output.
console.log(mySuperVillainName); //The supervillain name randomly selected in the previous section is output.

const Quote = require('inspirational-quotes'); //This line loads the "inspirational-quotes" package so that the next two lines are able to use its features.
var myQuote = Quote.getRandomQuote(); //var creates a variable called "Quote". The "inspirational-quotes" package's built-in feature is then used to pull a random quote.
console.log(myQuote); //The quote from the previous line is output.

const MovieQuote = require('popular-movie-quotes'); //This line loads the "popular-movie-quotes" package so that the next two lines are able to use its features.
var PopularMovieQuote = MovieQuote.getRandomQuote(); //var creates a variable called "PopularMovieQuote". The "popular-movie-quotes" package's built-in feature is then used to pull a random quote.
console.log(PopularMovieQuote); //The quote from the previous line is output.

const LastWord = require('famous-last-words'); //This line loads the "famous-last-words" package so that the next two lines are able to use its features.
const FamousLastWord = LastWords[0]; //This line pulls the first quote listed from the "famous-last-words" package. Changing the number inside of the brackets changes which quote is pulled. Since the package is an array and does not have any built-in random functions it is easier to 
console.log(FamousLastWord); //The quote chosen in the previous line is output.

const fs = require('fs'); //This line requires that the File System module is loaded.
fs.writeFileSync("superhero.txt", mySuperHeroName); //Creates a text file titled "superhero" that records the superhero name previously output.
fs.writeFileSync("supervillain.txt", mySuperVillainName); //Creates a text file titled "supervillain" that records the supervillain name previously output.
fs.writeFileSync("inspirational-quote.txt", myQuote); //Creates a text file titled "inspirational-quote" that records the inspirational quote previously output.
fs.writeFileSync("popular-movie-quote.txt", PopularMovieQuote); //Creates a text file titled "popular-movie-quote" that records the popular movie quote previously output.
fs.writeFileSync("famous-last-words.txt", FamousLastWord); //Creates a text file titled "famous-last-words" that records the famous last words quote previously output.
